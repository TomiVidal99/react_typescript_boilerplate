{
  "name": "esbuildTest",
  "version": "1.0.0",
  "description": "frontend template with esbuild, react and typescript",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-bundle": "esbuild src/app.tsx --bundle --minify --sourcemap --outfile=public/bundle.js",
    "build:linux": "node esbuild.config.js",
    "build:windows": "set \"NODE_ENV=production\" && node esbuild.config.js",
    "start:linux": "node esbuild.config.js -w",
    "start:windows": "set \"NODE_ENV=development\" && node esbuild.config.js -w"
  },
  "repository": "github.com/TomiVidal99/frontendEsbuildTemplate.git",
  "author": "Tomas Vidal <tomi_vidal_99@hotmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "esbuild": "0.14.49",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "4.7.4"
  },
  "devDependencies": {
    "esbuild-serve": "^1.0.1"
  }
}
